---
import { services } from "../data";
---

<section class="py-20 sm:py-32 bg-background">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-foreground mb-4">
        Nuestros Servicios
      </h2>
      <div class="h-1 w-20 bg-accent rounded-full"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {
        services.map((service) => (
          <div class="group relative bg-card border border-border rounded-lg overflow-hidden hover:border-accent/50 transition">
            {/* Image container */}
            <div class="relative w-full h-48 bg-muted overflow-hidden">
              <img
                src={service.image || "/placeholder.svg"}
                alt={service.title}
                class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
              />
            </div>

            {/* Content container */}
            <div class="p-8 relative z-10">
              <div class="absolute inset-0 bg-accent/5 opacity-0 group-hover:opacity-100 transition" />
              <div class="relative z-10">
                <h3 class="text-2xl font-bold text-foreground mb-3">
                  {service.title}
                </h3>
                <p class="text-muted-foreground mb-6 leading-relaxed">
                  {service.description}
                </p>
                <a
                  href="#contact"
                  class="inline-flex items-center text-accent font-semibold hover:text-accent/80 transition"
                >
                  {service.cta} â†’
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
