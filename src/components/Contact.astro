<section id="contact" class="py-20 sm:py-32 bg-background">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
    <div class="mb-12">
      <h2 class="text-4xl sm:text-5xl font-bold text-foreground mb-4">
        Contáctanos
      </h2>
      <div class="h-1 w-20 bg-accent rounded-full"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <div class="space-y-8">
        <div>
          <h3 class="text-lg font-semibold text-foreground mb-2">Ubicación</h3>
          <p class="text-muted-foreground">
            Urb. Costa Azul Mz. A' - Lt. 6, Ilo, Perú
          </p>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-foreground mb-2">Teléfono</h3>
          <a
            href="tel:953619071"
            class="text-accent hover:text-accent/80 transition font-semibold"
          >
            953 619 071
          </a>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-foreground mb-2">Correo</h3>
          <a
            href="mailto:gjuarez@dynamic-ilo.com"
            class="text-accent hover:text-accent/80 transition font-semibold"
          >
            gjuarez@dynamic-ilo.com
          </a>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-foreground mb-2">
            Redes Sociales
          </h3>
          <a
            href="https://tiktok.com/@dynamic_metalworks_ilo"
            target="_blank"
            rel="noopener noreferrer"
            class="text-accent hover:text-accent/80 transition font-semibold"
          >
            @dynamic_metalworks_ilo
          </a>
        </div>
      </div>

      <div class="bg-card border border-border rounded-lg p-8">
        <form class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-foreground mb-2"
              >Nombre</label
            >
            <input
              type="text"
              class="w-full px-4 py-2 bg-background border border-border rounded-lg text-foreground placeholder-muted-foreground focus:outline-none focus:border-accent transition"
              placeholder="Tu nombre"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2"
              >Correo</label
            >
            <input
              type="email"
              class="w-full px-4 py-2 bg-background border border-border rounded-lg text-foreground placeholder-muted-foreground focus:outline-none focus:border-accent transition"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2"
              >Mensaje</label
            >
            <textarea
              rows={4}
              class="w-full px-4 py-2 bg-background border border-border rounded-lg text-foreground placeholder-muted-foreground focus:outline-none focus:border-accent transition resize-none"
              placeholder="Cuéntanos sobre tu proyecto..."></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-6 py-3 bg-accent text-accent-foreground font-semibold rounded-lg hover:bg-accent/90 transition"
          >
            Enviar Mensaje
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
